<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="170dp"
    android:background="@color/blue">

    <RelativeLayout
        android:id="@+id/cardview"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="30dp">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/sandraimg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scaleType="centerCrop"
            android:src="@drawable/img">

        </de.hdodenhof.circleimageview.CircleImageView>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/imagePicker"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_marginStart="70dp"
            android:clickable="true"
            android:background="@drawable/imagepicker"
            android:layout_marginTop="73dp"
            android:src="@drawable/imagepicker">

        </TextView>


    </RelativeLayout>


    <TextView
        android:id="@+id/sandra"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="35dp"
        android:layout_toEndOf="@+id/cardview"
        android:text="Sandra Adams"
        android:textColor="@color/white"
        android:textSize="17sp" />


    <TextView
        android:id="@+id/mail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/sandra"
        android:layout_marginStart="10dp"
        android:layout_marginTop="3dp"
        android:layout_toEndOf="@+id/cardview"
        android:text="sandra_a88@gmail.com"
        android:textColor="@color/white"
        android:textSize="15sp" />


    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/mail"
        android:layout_marginStart="-90dp"
        android:layout_toEndOf="@+id/cardview"
        android:src="@drawable/dashline" />


</RelativeLayout>